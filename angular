<div class="container">
  <div class="card">
    <div class="card-header text-center">
      <h3>User Registration Form</h3>
    </div>

    <div class="card-body">
      <form [formGroup]='myForm' (ngSubmit)='addUser()'>
      <div class="form-group row">

        <label class='col-sm-1 col-form-label'>Username</label>
        <div class=col-sm-3><input type="text" class="form-control" formControlName='uname'/></div>



      </div>

      <div class="form-group row">
        <label class='col-sm-1 col-form-label'>Password</label>
        <div class=col-sm-3><input type="password" class="form-control" formControlName='pass'/></div>


        <div class="form-group row">
          <label class='col-sm-1 col-form-label'>Email</label>
          <div class=col-sm-3><input type="text" class="form-control" formControlName='email'/></div>

        </div>


        <div class="form-group row">
          <label class='col-sm-1 col-form-label'>City</label>
          <div class=col-sm-3><input type="text" class="form-control" formControlName='city'/></div>
        </div>
        <br />




      </div>
      <button class='btn btn-success'>Register</button> | <button type="reset" class='btn btn-primary'>Cancel</button>
      <div class="card-footer text-body-secondary text-center">

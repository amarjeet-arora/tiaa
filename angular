  <label class='col-sm-1 col-form-label'>Password</label>
  <div class= col-sm-3><input type="password" class="form-control" name='pass' ngModel required minlength="6" #pass=ngModel/></div>

  <div *ngIf='pass.invalid'>
    <div *ngIf="pass.errors?.['required']"><p>Password cant be empty</p></div>
    <div *ngIf="pass.errors?.['minlength']"><p>password must be 6 char long</p></div>
   </div>

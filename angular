  <div class= col-sm-3><input type="text" class="form-control" name='email' ngModel required email #em=ngModel/></div>
  <div *ngIf='em.invalid'>
    <div *ngIf="em.errors?.['required']"><p>Email cant be empty</p></div>
    <div *ngIf="em.errors?.['email']"><p>Email must be proper</p></div>
   </div>
